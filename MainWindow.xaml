<Window x:Class="ScreenSplitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Split Application" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side - Window capture -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Controls -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="WindowComboBox" Width="300" Margin="0,0,10,0" 
                         SelectionChanged="WindowComboBox_SelectionChanged"/>
                <Button Content="Refresh Windows" Click="RefreshButton_Click" Width="120"/>
            </StackPanel>

            <!-- Window display -->
            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Background="#F0F0F0">
                <Image x:Name="WindowDisplay" Stretch="Uniform"/>
                <TextBlock x:Name="WindowStatus" Text="Select a window from the dropdown" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Right side - Camera and logo -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Camera controls -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="CameraButton" Content="Enable Camera" Click="CameraButton_Click" Width="120"/>
            </StackPanel>

            <!-- Camera display -->
            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Background="#F0F0F0">
                <Image x:Name="CameraDisplay" Stretch="Uniform"/>
                <TextBlock x:Name="CameraStatus" Text="Camera disabled" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Logo display -->
            <Border Grid.Row="2" Height="150" BorderBrush="Black" BorderThickness="2" 
                    Background="#F0F0F0" Margin="0,10,0,0">
                <TextBlock Text="BRAND LOGO" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window> 